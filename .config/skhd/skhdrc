# focus window
alt - h : yabai -m window --focus west || yabai -m window --focus stack.prev || yabai -m display --focus west
alt - j : yabai -m window --focus south || yabai -m display --focus south
alt - k : yabai -m window --focus north || yabai -m display --focus north
alt - l : yabai -m window --focus east || yabai -m window --focus stack.next || yabai -m display --focus east

# swap managed window
shift + alt - h : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)
shift + alt - j : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
shift + alt - k : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
shift + alt - l : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)

# move managed window
shift + alt + ctrl - h : yabai -m window --warp west
shift + alt + ctrl - j : yabai -m window --warp south
shift + alt + ctrl - k : yabai -m window --warp north
shift + alt + ctrl - l : yabai -m window --warp east

alt + cmd - h : yabai -m window west --resize right:-100:0 2> /dev/null || yabai -m window --resize right:-100:0
alt + cmd - j : yabai -m window north --resize bottom:0:100 2> /dev/null || yabai -m window --resize bottom:0:100
alt + cmd - k : yabai -m window south --resize top:0:-100 2> /dev/null || yabai -m window --resize top:0:-100
alt + cmd - l : yabai -m window east --resize left:100:0 2> /dev/null || yabai -m window --resize left:100:0

# balance size of windows
alt + cmd - 0 : yabai -m space --balance

# rotate tree
alt - r : yabai -m space --rotate 90

#focus recent
alt - u : yabai -m window --focus recent

# toggle window fullscreen zoom
alt - f : yabai -m window --toggle zoom-fullscreen

# alt - s : yabai -m window --toggle
ctrl + alt - s : yabai -m window --toggle sticky;\
          yabai -m window --toggle pip

# toggle padding and gap
alt - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 20:20:1:1:18:18

# float / unfloat window and bottom left on screen
alt - p : yabai -m window --toggle float;\
          yabai -m window --grid 20:20:12:12:18:18 \
          yabai -m window --toggle sticky

alt - m : yabai -m window --minimize

# toggle window split type
alt - e : yabai -m window --toggle split

# move window to space
ctrl + alt - 1 : yabai -m window --space 1; skhd -k "alt - 1"
ctrl + alt - 2 : yabai -m window --space 2; skhd -k "alt - 2"
ctrl + alt - 3 : yabai -m window --space 3; skhd -k "alt - 3"
ctrl + alt - 4 : yabai -m window --space 4; skhd -k "alt - 4"
ctrl + alt - 5 : yabai -m window --space 5; skhd -k "alt - 5"
ctrl + alt - 6 : yabai -m window --space 6; skhd -k "alt - 6"
ctrl + alt - 7 : yabai -m window --space 7; skhd -k "alt - 7"
ctrl + alt - 8 : yabai -m window --space 8; skhd -k "alt - 8"
ctrl + alt - 9 : yabai -m window --space 9; skhd -k "alt - 9"

ctrl + alt - l : yabai -m window --space next; skhd -k "alt - $(yabai -m query --spaces --space | jq '.index + 1')"
ctrl + alt - h : yabai -m window --space prev; skhd -k "alt - $(yabai -m query --spaces --space | jq '.index - 1')"



# create desktop, move window and follow focus - uses jq for parsing json (brew install jq)
shift + alt - n : yabai -m space --create && \
                   index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
                   yabai -m window --space "${index}" && \
                   yabai -m space --focus "${index}"

ctrl + alt - r: sketchybar --reload && yabai --restart-service && killall Dock

# alt - b : yabai -m query --windows --window | jq -re '.["is-topmost"]' | xargs -I {} bash -c "if [[ '{}' = 'true' ]]; then yabai -m window --sub-layer normal; elif [[ '{}' = 'false' ]]; then yabai -m window --sub-layer above; fi" 
alt - b : yabai -m space --layout $(yabai -m query --spaces --space | jq -r '.type' | grep -q bsp && echo stack || echo bsp)

# Application launchers
alt + shift - c : open -a "Google Chrome"
alt + shift - g : open -a "Gmail"
alt + shift - a : open -a "Google Calendar"
alt + shift - i : open -a "iTerm"
alt + shift - x : open -a "Cursor"
alt + shift - p : open -a "Comet"
alt + shift - s : open -a "Slack"
alt + shift - o : open -a "Obsidian"

